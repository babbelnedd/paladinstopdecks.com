<div class="box">
    <div class="box-body">
        <h2>@{{user.name}}</h2>
        <div class="info">
            <p>Registered since {{moment user.created 'x' 'LL'}}</p>
            <p>Last seen {{moment user.lastLogin 'utc' 'LL'}}</p>
        </div>

        <h3>Decks</h3>
        {{#each decks}}
            <p>
                <a href="{{this.fullPath}}">{{this.name}}</a>
            </p>
        {{/each}}
    </div>
</div>